%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path
  - if current_user
    %ul.col-md-3.clearfix
      %li= link_to "Videos", home_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path
    %form.col-md-4.navbar-form(action="#{search_videos_path}")
      .form-group
        %input.form-control(type="text" name="query" placeholder="Search for videos here")
      %button.btn.btn-default(type="submit") Search
    =link_to 'Advanced Search', advanced_search_videos_path, html_options = { class: 'col-md-1 text-center'}
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              = link_to 'Invite a friend', new_invitation_path
              %a(href="#") Account
              %a(href="#") Plan and Billing
              = link_to "Sign Out", sign_out_path
