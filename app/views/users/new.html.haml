%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6", inline_errors: true do |f|
        %header
          %h1 Register
        %fieldset
          .form-group
            = f.email_field :email, label: "Email Address"
          .form-group
            = f.password_field :password
          .form-group
            = f.text_field :full_name, label: "Full Name"
        %fieldset.actions.control-group
          .controls
            %input(type="submit" vlaue="Sign Up" class="btn")
