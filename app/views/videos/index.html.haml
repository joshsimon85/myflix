- @categories.each do |cat, videos|
  - if cat.videos.length > 0
    %article.video_category
      %header
        %h3= link_to "#{cat.name.capitalize}", category_path(cat)
      .videos.row
        - cat.recent_videos.each do |video|
          .video.col-sm-2
            = link_to video_path(video), nil do
              %img(src="#{video.small_cover_url}")
